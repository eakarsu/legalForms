<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
    <link href="/css/practice-management.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/pm-nav', { active: active, user: user }) %>

    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h2><i class="fas fa-file-alt me-2"></i>Document Generator</h2>
                <p class="text-muted">Select a category to generate AI-powered legal documents</p>
            </div>
        </div>

        <div class="row">
            <% Object.entries(formTypes).forEach(([key, config]) => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="service-icon me-3">
                                <i class="fas <%= config.icon || 'fa-file-contract' %> fa-2x text-primary"></i>
                            </div>
                            <h5 class="card-title mb-0"><%= config.name %></h5>
                        </div>
                        <p class="card-text text-muted"><%= config.description %></p>
                        <a href="/form/<%= key %>" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-2"></i>Generate Documents
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .hover-card { transition: transform 0.2s, box-shadow 0.2s; }
        .hover-card:hover { transform: translateY(-5px); box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important; }
        .service-icon { width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; background: #f0f7ff; border-radius: 10px; }
    </style>
</body>
</html>

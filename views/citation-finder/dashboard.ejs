<%- include('../base-pm', {
    title: 'Citation Finder',
    description: 'AI-powered legal citation research'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-gavel me-2"></i>Citation Finder</h2>
            <p class="text-muted mb-0">AI-powered legal citation research</p>
        </div>
        <a href="/citation-finder/search" class="btn btn-primary">
            <i class="fas fa-search me-1"></i>New Search
        </a>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.total_searches || 0 %></h3>
                    <small>Total Searches</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.total_citations || 0 %></h3>
                    <small>Citations Found</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.recent_searches || 0 %></h3>
                    <small>This Week</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Searches -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Searches</h5>
        </div>
        <div class="card-body">
            <% if (searches.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Legal Issue</th>
                            <th>Jurisdiction</th>
                            <th>Citations</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% searches.forEach(s => { %>
                        <tr>
                            <td><%= new Date(s.created_at).toLocaleDateString() %></td>
                            <td><%= s.legal_issue.substring(0, 50) %>...</td>
                            <td><%= s.jurisdiction || 'All' %></td>
                            <td><span class="badge bg-primary"><%= s.citation_count || 0 %></span></td>
                            <td>
                                <span class="badge bg-<%= s.status === 'completed' ? 'success' : 'warning' %>">
                                    <%= s.status %>
                                </span>
                            </td>
                            <td>
                                <a href="/citation-finder/results/<%= s.id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-search fa-4x text-muted mb-3"></i>
                <h5>No searches yet</h5>
                <p class="text-muted">Start your first citation search</p>
                <a href="/citation-finder/search" class="btn btn-primary">
                    <i class="fas fa-search me-1"></i>New Search
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

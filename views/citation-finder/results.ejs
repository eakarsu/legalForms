<%- include('../base-pm', {
    title: 'Citation Results',
    description: 'Search results for legal citations'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-gavel me-2"></i>Citation Results</h2>
            <p class="text-muted mb-0">Found <%= citations.length %> relevant citations</p>
        </div>
        <div>
            <a href="/citation-finder/search" class="btn btn-primary me-2">
                <i class="fas fa-search me-1"></i>New Search
            </a>
            <a href="/citation-finder" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back
            </a>
        </div>
    </div>

    <!-- Search Summary -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Search Query</h5>
        </div>
        <div class="card-body">
            <p><strong>Legal Issue:</strong> <%= search.legal_issue %></p>
            <div class="row">
                <div class="col-md-4">
                    <strong>Jurisdiction:</strong> <%= search.jurisdiction || 'All' %>
                </div>
                <div class="col-md-4">
                    <strong>Practice Area:</strong> <%= search.practice_area || 'All' %>
                </div>
                <div class="col-md-4">
                    <strong>Search Type:</strong> <%= search.search_type %>
                </div>
            </div>
            <% if (search.research_summary) { %>
            <hr>
            <h6>Research Summary</h6>
            <p class="text-muted"><%= search.research_summary %></p>
            <% } %>
        </div>
    </div>

    <!-- Citations -->
    <% if (citations.length > 0) { %>
    <div class="row">
        <% citations.forEach((c, index) => { %>
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-<%= c.citation_type === 'case_law' ? 'primary' : c.citation_type === 'statute' ? 'success' : 'secondary' %> me-2">
                            <%= c.citation_type.replace('_', ' ').toUpperCase() %>
                        </span>
                        <strong><%= c.case_name || c.citation_text %></strong>
                    </div>
                    <div>
                        <span class="badge bg-info">
                            Relevance: <%= Math.round((c.relevance_score || 0) * 100) %>%
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="mb-2">
                                <strong>Citation:</strong>
                                <code><%= c.citation_text %></code>
                            </p>
                            <% if (c.court) { %>
                            <p class="mb-2"><strong>Court:</strong> <%= c.court %> (<%= c.year || 'N/A' %>)</p>
                            <% } %>
                            <% if (c.key_holding) { %>
                            <p class="mb-2"><strong>Key Holding:</strong> <%= c.key_holding %></p>
                            <% } %>
                            <% if (c.how_to_use) { %>
                            <p class="mb-0"><strong>How to Use:</strong> <span class="text-muted"><%= c.how_to_use %></span></p>
                            <% } %>
                        </div>
                        <div class="col-md-4 text-end">
                            <button class="btn btn-sm btn-outline-primary copy-btn mb-2" data-citation="<%= c.citation_text %>">
                                <i class="fas fa-copy me-1"></i>Copy Citation
                            </button>
                            <br>
                            <button class="btn btn-sm btn-success save-btn" data-id="<%= c.id %>">
                                <i class="fas fa-save me-1"></i>Save to Case
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <% } else { %>
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h5>No citations found</h5>
            <p class="text-muted">Try broadening your search or adjusting the parameters</p>
            <a href="/citation-finder/search" class="btn btn-primary">
                <i class="fas fa-search me-1"></i>Try Again
            </a>
        </div>
    </div>
    <% } %>

    <!-- Additional Suggestions -->
    <%
    let suggestions = [];
    try {
        suggestions = JSON.parse(search.additional_suggestions || '[]');
    } catch(e) {}
    %>
    <% if (suggestions.length > 0) { %>
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Suggested Follow-up Searches</h5>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mb-0">
                <% suggestions.forEach(s => { %>
                <li class="mb-2">
                    <i class="fas fa-arrow-right text-primary me-2"></i><%= s %>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <% } %>

    <!-- Disclaimer -->
    <div class="alert alert-warning mt-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Important:</strong> These AI-generated citations are for research assistance only. Always verify citations through official legal databases (Westlaw, LexisNexis, etc.) before using in legal documents or court filings.
    </div>
</div>

<!-- Save to Case Modal -->
<div class="modal fade" id="saveCaseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Save Citation to Case</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="saveCitationId">
                <div class="mb-3">
                    <label class="form-label">Select Case</label>
                    <select class="form-select" id="saveCaseId">
                        <option value="">Select a case...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmSaveBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Copy citation
document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const citation = this.dataset.citation;
        navigator.clipboard.writeText(citation).then(() => {
            this.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-copy me-1"></i>Copy Citation';
            }, 2000);
        });
    });
});

// Save to case
const saveModal = new bootstrap.Modal(document.getElementById('saveCaseModal'));
let currentCitationId = null;

document.querySelectorAll('.save-btn').forEach(btn => {
    btn.addEventListener('click', async function() {
        currentCitationId = this.dataset.id;

        // Load cases
        try {
            const res = await fetch('/api/cases/list');
            const data = await res.json();
            const select = document.getElementById('saveCaseId');
            select.innerHTML = '<option value="">Select a case...</option>';
            data.cases.forEach(c => {
                select.innerHTML += `<option value="${c.id}">${c.case_number} - ${c.title}</option>`;
            });
        } catch (e) {
            console.error('Failed to load cases');
        }

        saveModal.show();
    });
});

document.getElementById('confirmSaveBtn').addEventListener('click', async function() {
    const caseId = document.getElementById('saveCaseId').value;
    if (!caseId) {
        alert('Please select a case');
        return;
    }

    try {
        const res = await fetch(`/api/citation-finder/citation/${currentCitationId}/save-to-case`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ case_id: caseId })
        });
        const data = await res.json();
        if (data.success) {
            alert('Citation saved to case!');
            saveModal.hide();
        } else {
            alert('Error: ' + data.error);
        }
    } catch (e) {
        alert('Error: ' + e.message);
    }
});
</script>
</body>
</html>

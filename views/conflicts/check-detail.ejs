<%- include('../base-pm', {
    title: 'Conflict Check #' + check.id.slice(0,8),
    description: 'Conflict check details'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/conflicts">Conflict Checking</a></li>
                    <li class="breadcrumb-item active">Check Details</li>
                </ol>
            </nav>
            <h2><i class="fas fa-exclamation-triangle me-2"></i>Conflict Check Report</h2>
            <p class="text-muted mb-0">Performed on <%= new Date(check.created_at).toLocaleString() %></p>
        </div>
        <div>
            <% if (check.status === 'conflict_found' && !check.waiver_id) { %>
            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#waiverModal">
                <i class="fas fa-file-signature me-1"></i>Request Waiver
            </button>
            <% } %>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="fas fa-print me-1"></i>Print Report
            </button>
        </div>
    </div>

    <!-- Status Banner -->
    <div class="alert alert-<%= check.status === 'clear' ? 'success' : check.status === 'conflict_found' ? 'danger' : check.status === 'waived' ? 'warning' : 'secondary' %> mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-<%= check.status === 'clear' ? 'check-circle' : check.status === 'conflict_found' ? 'exclamation-triangle' : 'file-signature' %> fa-2x me-3"></i>
            <div>
                <h5 class="mb-0">
                    <% if (check.status === 'clear') { %>No Conflicts Found<% } %>
                    <% if (check.status === 'conflict_found') { %><%= check.conflict_count %> Potential Conflict(s) Found<% } %>
                    <% if (check.status === 'waived') { %>Conflict Waived<% } %>
                </h5>
                <small>Check Type: <%= check.check_type %></small>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Search Details -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search Parameters</h5>
                </div>
                <div class="card-body">
                    <% const terms = typeof check.search_terms === 'string' ? JSON.parse(check.search_terms || '{}') : (check.search_terms || {}); %>
                    <% if (terms.names && terms.names.length > 0) { %>
                    <p class="mb-2"><strong>Names Searched:</strong></p>
                    <ul class="list-unstyled ms-3">
                        <% terms.names.forEach(name => { %>
                        <li><i class="fas fa-user me-2 text-muted"></i><%= name %></li>
                        <% }) %>
                    </ul>
                    <% } %>
                    <% if (terms.companies && terms.companies.length > 0) { %>
                    <p class="mb-2"><strong>Companies Searched:</strong></p>
                    <ul class="list-unstyled ms-3">
                        <% terms.companies.forEach(company => { %>
                        <li><i class="fas fa-building me-2 text-muted"></i><%= company %></li>
                        <% }) %>
                    </ul>
                    <% } %>

                    <hr>

                    <% if (check.client_id) { %>
                    <p><strong>Related Client:</strong><br><%= check.first_name %> <%= check.last_name %></p>
                    <% } %>
                    <% if (check.case_id) { %>
                    <p><strong>Related Case:</strong><br><%= check.case_title %></p>
                    <% } %>
                </div>
            </div>

            <% if (check.waiver_id) { %>
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-file-signature me-2"></i>Waiver Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Waived By:</strong> <%= check.waiver_granted_by %></p>
                    <p><strong>Date:</strong> <%= new Date(check.waiver_granted_at).toLocaleDateString() %></p>
                    <p><strong>Reason:</strong><br><%= check.waiver_reason %></p>
                </div>
            </div>
            <% } %>
        </div>

        <!-- Conflicts Found -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Results</h5>
                </div>
                <div class="card-body">
                    <% const conflicts = typeof check.results === 'string' ? JSON.parse(check.results || '[]') : (check.results || []); %>
                    <% if (conflicts && conflicts.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Match</th>
                                    <th>Source</th>
                                    <th>Match Type</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% conflicts.forEach(conflict => { %>
                                <tr>
                                    <td>
                                        <strong><%= conflict.matched_name || conflict.name || 'Unknown' %></strong>
                                    </td>
                                    <td><span class="badge bg-secondary"><%= conflict.source %></span></td>
                                    <td><%= conflict.match_type || 'Exact' %></td>
                                    <td>
                                        <% if (conflict.case_title) { %>Case: <%= conflict.case_title %><% } %>
                                        <% if (conflict.role) { %>Role: <%= conflict.role %><% } %>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5>No Conflicts Detected</h5>
                        <p class="text-muted">The search did not find any matching records in the system.</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Waiver Modal -->
<div class="modal fade" id="waiverModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Request Conflict Waiver</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="waiverForm">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Waiving a conflict should only be done after careful consideration of ethical rules and with informed client consent.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason for Waiver</label>
                        <textarea name="reason" class="form-control" rows="4" required placeholder="Explain why this conflict can be waived..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Client Consent Obtained</label>
                        <select name="client_consent" class="form-select" required>
                            <option value="">Select...</option>
                            <option value="written">Written consent obtained</option>
                            <option value="verbal">Verbal consent (documented)</option>
                            <option value="pending">Consent pending</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Submit Waiver</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.getElementById('waiverForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(e.target).entries());

    try {
        const response = await fetch('/api/conflicts/<%= check.id %>/waiver', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if (result.success) {
            window.location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Failed to submit waiver');
    }
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

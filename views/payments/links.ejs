<%- include('../base-pm', { title: title }) %>
<%- include('../partials/pm-nav', { active: 'payments' }) %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-link me-2"></i>Payment Links</h2>
            <p class="text-muted mb-0">Manage shareable payment links for invoices</p>
        </div>
        <a href="/payments/links/new" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Create Link
        </a>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Invoice</th>
                        <th>Client</th>
                        <th>Amount</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (links.length === 0) { %>
                    <tr><td colspan="6" class="text-center text-muted py-4">No payment links created yet</td></tr>
                    <% } else { %>
                    <% links.forEach(link => { %>
                    <tr class="clickable-row" data-id="<%= link.id %>" data-token="<%= link.token %>" style="cursor: pointer;">
                        <td><strong><%= link.invoice_number %></strong></td>
                        <td><%= link.company_name || (link.first_name + ' ' + link.last_name) %></td>
                        <td>$<%= parseFloat(link.amount).toFixed(2) %></td>
                        <td><%= new Date(link.created_at).toLocaleDateString() %></td>
                        <td><span class="badge bg-<%= link.is_active ? 'success' : 'secondary' %>"><%= link.is_active ? 'Active' : 'Inactive' %></span></td>
                        <td onclick="event.stopPropagation();">
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary btn-copy" data-token="<%= link.token %>" title="Copy Link"><i class="fas fa-copy"></i></button>
                                <button class="btn btn-outline-warning btn-toggle" data-id="<%= link.id %>" data-active="<%= link.is_active %>" title="<%= link.is_active ? 'Deactivate' : 'Activate' %>">
                                    <i class="fas fa-<%= link.is_active ? 'pause' : 'play' %>"></i>
                                </button>
                                <button class="btn btn-outline-danger btn-delete" data-id="<%= link.id %>" title="Delete"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Link Detail Modal -->
<div class="modal fade" id="linkModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Payment Link Details</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body" id="linkDetails"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" id="btnCopyModal"><i class="fas fa-copy me-1"></i>Copy Link</button>
                <button type="button" class="btn btn-outline-danger" id="btnDeleteModal"><i class="fas fa-trash me-1"></i>Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
var currentLinkId = null;
var currentToken = null;

// Row click handler
document.querySelectorAll('.clickable-row').forEach(row => {
    row.addEventListener('click', function() {
        viewLink(this.dataset.id, this.dataset.token);
    });
});

// Copy button handlers
document.querySelectorAll('.btn-copy').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        copyLink(this.dataset.token);
    });
});

// Toggle button handlers
document.querySelectorAll('.btn-toggle').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        toggleLink(this.dataset.id, this.dataset.active === 'true');
    });
});

// Delete button handlers
document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        deleteLink(this.dataset.id);
    });
});

function copyLink(token) {
    const url = window.location.origin + '/pay/' + token;
    navigator.clipboard.writeText(url).then(() => alert('Payment link copied!'));
}

function viewLink(id, token) {
    currentLinkId = id;
    currentToken = token;
    const links = <%- JSON.stringify(links) %>;
    const link = links.find(l => l.id == id);
    if (link) {
        const url = window.location.origin + '/pay/' + token;
        document.getElementById('linkDetails').innerHTML = `
            <table class="table table-borderless">
                <tr><th width="120">Invoice:</th><td>${link.invoice_number}</td></tr>
                <tr><th>Client:</th><td>${link.company_name || (link.first_name + ' ' + link.last_name)}</td></tr>
                <tr><th>Amount:</th><td><strong>$${parseFloat(link.amount).toFixed(2)}</strong></td></tr>
                <tr><th>Status:</th><td><span class="badge bg-${link.is_active ? 'success' : 'secondary'}">${link.is_active ? 'Active' : 'Inactive'}</span></td></tr>
                <tr><th>Created:</th><td>${new Date(link.created_at).toLocaleDateString()}</td></tr>
            </table>
            <div class="mt-3">
                <label class="form-label">Payment URL:</label>
                <input type="text" class="form-control" value="${url}" readonly onclick="this.select()">
            </div>
        `;
        new bootstrap.Modal(document.getElementById('linkModal')).show();
    }
}

function toggleLink(id, isActive) {
    const action = isActive ? 'deactivate' : 'activate';
    if (!confirm(action.charAt(0).toUpperCase() + action.slice(1) + ' this payment link?')) return;
    fetch('/api/payments/links/' + id + '/toggle', { method: 'POST' })
    .then(r => r.json())
    .then(data => {
        if (data.success) location.reload();
        else alert('Error: ' + (data.error || 'Failed'));
    });
}

function deleteLink(id) {
    if (!confirm('Delete this payment link?')) return;
    fetch('/api/payments/links/' + id, { method: 'DELETE' })
    .then(r => r.json())
    .then(data => {
        if (data.success) location.reload();
        else alert('Error: ' + (data.error || 'Failed'));
    });
}

document.getElementById('btnCopyModal').onclick = function() { copyLink(currentToken); };
document.getElementById('btnDeleteModal').onclick = function() {
    bootstrap.Modal.getInstance(document.getElementById('linkModal')).hide();
    deleteLink(currentLinkId);
};
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include('../base-pm', { title: title }) %>
<%- include('../partials/pm-nav', { active: 'payments' }) %>

<div class="container-fluid py-4">
    <h2><i class="fas fa-cog me-2"></i>Payment Settings</h2>
    <p class="text-muted">Configure your payment processing options</p>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Stripe Integration</h5>
        </div>
        <div class="card-body">
            <% if (stripeConfigured) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>Stripe is configured and ready to accept payments.
            </div>
            <% } else { %>
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>Stripe is not configured. Payments will be in demo mode.
            </div>
            <p>To enable real payments, configure your Stripe API keys in the environment variables:</p>
            <ul>
                <li><code>STRIPE_SECRET_KEY</code></li>
                <li><code>STRIPE_PUBLISHABLE_KEY</code></li>
            </ul>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>
</body>
</html>

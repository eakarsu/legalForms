    <div class="pm-container">
        <div class="pm-header">
            <div class="pm-header-content"><h1><i class="fas fa-history me-2"></i>Activity Log</h1><p class="text-muted">Track all actions and changes</p></div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" class="row g-3">
                    <div class="col-md-3"><select name="action" class="form-select"><option value="">All Actions</option><option value="create">Create</option><option value="update">Update</option><option value="delete">Delete</option><option value="view">View</option><option value="login">Login</option></select></div>
                    <div class="col-md-3"><select name="entity_type" class="form-select"><option value="">All Types</option><option value="client">Client</option><option value="case">Case</option><option value="document">Document</option><option value="invoice">Invoice</option><option value="time_entry">Time Entry</option></select></div>
                    <div class="col-md-3"><input type="date" name="date" class="form-control" placeholder="Date"></div>
                    <div class="col-md-3"><button type="submit" class="btn btn-secondary w-100"><i class="fas fa-search"></i> Filter</button></div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <% if (activities.length === 0) { %>
                    <div class="text-center py-5"><i class="fas fa-stream fa-3x text-muted mb-3"></i><p class="text-muted">No activities found</p></div>
                <% } else { %>
                    <div class="timeline p-4">
                        <% activities.forEach((a, i) => {
                            const icon = a.action === 'create' ? 'plus-circle text-success' :
                                        a.action === 'update' ? 'edit text-primary' :
                                        a.action === 'delete' ? 'trash text-danger' :
                                        a.action === 'login' ? 'sign-in-alt text-info' : 'circle text-secondary';
                            const entityUrls = {
                                'client': '/clients/',
                                'case': '/cases/',
                                'document': '/documents/',
                                'invoice': '/billing/invoices/',
                                'time_entry': '/billing/time',
                                'expense': '/billing/expenses'
                            };
                            const entityUrl = a.entity_id && entityUrls[a.entity_type] ? entityUrls[a.entity_type] + a.entity_id : null;
                        %>
                            <div class="timeline-item d-flex mb-4 <%= entityUrl ? 'clickable-activity' : '' %>" <%= entityUrl ? 'data-href="' + entityUrl + '" style="cursor: pointer;"' : '' %>>
                                <div class="timeline-icon me-3">
                                    <i class="fas fa-<%= icon %> fa-lg"></i>
                                </div>
                                <div class="timeline-content flex-grow-1">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-1">
                                            <%= a.first_name ? a.first_name + ' ' + a.last_name : (a.email || 'System') %>
                                            <span class="text-muted fw-normal"><%= a.action %></span>
                                            <%= a.entity_type %>
                                            <% if (entityUrl) { %><i class="fas fa-external-link-alt text-muted ms-1" style="font-size: 0.7em;"></i><% } %>
                                        </h6>
                                        <small class="text-muted"><%= new Date(a.created_at).toLocaleString() %></small>
                                    </div>
                                    <% if (a.details) { %>
                                        <small class="text-muted">
                                            <% const details = typeof a.details === 'string' ? JSON.parse(a.details) : a.details; %>
                                            <% if (details.title) { %>Title: <%= details.title %><% } %>
                                            <% if (details.changes) { %>Changes: <%= JSON.stringify(details.changes) %><% } %>
                                        </small>
                                    <% } %>
                                    <% if (a.ip_address) { %><br><small class="text-muted">IP: <%= a.ip_address %></small><% } %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
    document.querySelectorAll('.clickable-activity').forEach(function(item) {
        item.addEventListener('click', function() {
            if (this.dataset.href) {
                window.location.href = this.dataset.href;
            }
        });
    });
    </script>

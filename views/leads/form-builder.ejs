<%- include('../base-pm', { title: title }) %>
<%- include('../partials/pm-nav', { active: 'leads' }) %>

<div class="container-fluid py-4">
    <h2><i class="fas fa-plus me-2"></i>Create Intake Form</h2>
    <p class="text-muted">Build a custom intake form for lead capture</p>

    <div class="card mt-4">
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label class="form-label">Form Name</label>
                    <input type="text" class="form-control" placeholder="e.g., Personal Injury Intake">
                </div>
                <div class="mb-3">
                    <label class="form-label">Form Description</label>
                    <textarea class="form-control" rows="2" placeholder="Describe this intake form"></textarea>
                </div>
                <hr>
                <p class="text-muted">Form builder coming soon. For now, use the default intake form.</p>
                <a href="/leads/forms" class="btn btn-secondary">Back to Forms</a>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>
</body>
</html>

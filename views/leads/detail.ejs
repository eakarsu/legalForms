<%- include('../base-pm', {
    title: lead.first_name + ' ' + lead.last_name + ' - Lead',
    description: 'Lead details'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/leads">Leads</a></li>
                    <li class="breadcrumb-item active"><%= lead.first_name %> <%= lead.last_name %></li>
                </ol>
            </nav>
            <h2><i class="fas fa-user-plus me-2"></i><%= lead.first_name %> <%= lead.last_name %></h2>
            <p class="text-muted mb-0">
                <span class="badge bg-<%= lead.status === 'new' ? 'info' : lead.status === 'converted' ? 'success' : lead.status === 'lost' ? 'danger' : 'warning' %>">
                    <%= lead.status %>
                </span>
                <% if (lead.lead_score) { %> | Score: <%= lead.lead_score %>/100<% } %>
            </p>
        </div>
        <div>
            <% if (lead.status !== 'converted') { %>
            <button class="btn btn-success me-2" onclick="convertToClient()">
                <i class="fas fa-user-check me-1"></i>Convert to Client
            </button>
            <% } %>
            <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#editLeadModal">
                <i class="fas fa-edit me-1"></i>Edit
            </button>
            <button class="btn btn-outline-danger" onclick="deleteLead()">
                <i class="fas fa-trash me-1"></i>Delete
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Lead Info -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Contact Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong><br><a href="mailto:<%= lead.email %>"><%= lead.email %></a></p>
                    <% if (lead.phone) { %><p><strong>Phone:</strong><br><a href="tel:<%= lead.phone %>"><%= lead.phone %></a></p><% } %>
                    <% if (lead.company) { %><p><strong>Company:</strong><br><%= lead.company %></p><% } %>
                    <% if (lead.address) { %><p><strong>Address:</strong><br><%= lead.address %></p><% } %>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tag me-2"></i>Lead Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Practice Area:</strong><br><%= lead.practice_area || 'Not specified' %></p>
                    <p><strong>Source:</strong><br><%= lead.source || 'Unknown' %></p>
                    <p><strong>Referral Source:</strong><br><%= lead.referral_source || 'N/A' %></p>
                    <p><strong>Submitted:</strong><br><%= new Date(lead.created_at).toLocaleString() %></p>
                    <% if (lead.form_name) { %><p><strong>Form:</strong><br><%= lead.form_name %></p><% } %>
                </div>
            </div>

            <!-- Status Update -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Update Status</h5>
                </div>
                <div class="card-body">
                    <select id="statusSelect" class="form-select mb-3" onchange="updateStatus()">
                        <option value="new" <%= lead.status === 'new' ? 'selected' : '' %>>New</option>
                        <option value="contacted" <%= lead.status === 'contacted' ? 'selected' : '' %>>Contacted</option>
                        <option value="qualified" <%= lead.status === 'qualified' ? 'selected' : '' %>>Qualified</option>
                        <option value="proposal_sent" <%= lead.status === 'proposal_sent' ? 'selected' : '' %>>Proposal Sent</option>
                        <option value="converted" <%= lead.status === 'converted' ? 'selected' : '' %>>Converted</option>
                        <option value="lost" <%= lead.status === 'lost' ? 'selected' : '' %>>Lost</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-8">
            <!-- Case Description -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Case Description</h5>
                </div>
                <div class="card-body">
                    <% if (lead.case_description) { %>
                    <p style="white-space: pre-wrap;"><%= lead.case_description %></p>
                    <% } else { %>
                    <p class="text-muted">No case description provided</p>
                    <% } %>
                </div>
            </div>

            <!-- Form Responses -->
            <% if (lead.form_data) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Form Responses</h5>
                </div>
                <div class="card-body">
                    <% const formData = typeof lead.form_data === 'string' ? JSON.parse(lead.form_data) : (lead.form_data || {}); %>
                    <dl class="row mb-0">
                        <% Object.entries(formData).forEach(([key, value]) => { %>
                        <dt class="col-sm-4"><%= key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></dt>
                        <dd class="col-sm-8"><%= value || 'N/A' %></dd>
                        <% }) %>
                    </dl>
                </div>
            </div>
            <% } %>

            <!-- Activity Log -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Activity</h5>
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addActivityModal">
                        <i class="fas fa-plus me-1"></i>Add Note
                    </button>
                </div>
                <div class="card-body">
                    <% if (typeof activities !== 'undefined' && activities.length > 0) { %>
                    <div class="timeline">
                        <% activities.forEach(activity => { %>
                        <div class="timeline-item mb-3 pb-3 border-bottom">
                            <div class="d-flex justify-content-between">
                                <strong><%= activity.activity_type %></strong>
                                <small class="text-muted"><%= new Date(activity.created_at).toLocaleString() %></small>
                            </div>
                            <p class="mb-0 mt-1"><%= activity.description %></p>
                        </div>
                        <% }) %>
                    </div>
                    <% } else { %>
                    <p class="text-muted text-center mb-0">No activity recorded yet</p>
                    <% } %>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="mailto:<%= lead.email %>" class="btn btn-outline-primary w-100">
                                <i class="fas fa-envelope me-1"></i>Email
                            </a>
                        </div>
                        <% if (lead.phone) { %>
                        <div class="col-md-3">
                            <a href="tel:<%= lead.phone %>" class="btn btn-outline-success w-100">
                                <i class="fas fa-phone me-1"></i>Call
                            </a>
                        </div>
                        <% } %>
                        <div class="col-md-3">
                            <button class="btn btn-outline-info w-100" onclick="scheduleFollowup()">
                                <i class="fas fa-calendar me-1"></i>Schedule
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" onclick="runConflictCheck()">
                                <i class="fas fa-exclamation-triangle me-1"></i>Conflict Check
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Activity Modal -->
<div class="modal fade" id="addActivityModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Activity</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addActivityForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Activity Type</label>
                        <select name="activity_type" class="form-select" required>
                            <option value="note">Note</option>
                            <option value="call">Phone Call</option>
                            <option value="email">Email</option>
                            <option value="meeting">Meeting</option>
                            <option value="follow_up">Follow Up</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Activity</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
async function updateStatus() {
    const status = document.getElementById('statusSelect').value;

    try {
        const response = await fetch('/api/leads/<%= lead.id %>', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status })
        });
        const result = await response.json();
        if (result.success) {
            window.location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Update failed');
    }
}

async function convertToClient() {
    if (!confirm('Convert this lead to a client? This will create a new client record.')) return;

    try {
        const response = await fetch('/api/leads/<%= lead.id %>/convert', {
            method: 'POST'
        });
        const result = await response.json();
        if (result.success) {
            alert('Lead converted successfully!');
            window.location.href = '/clients/' + result.client.id;
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Conversion failed');
    }
}

document.getElementById('addActivityForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(e.target).entries());

    try {
        const response = await fetch('/api/leads/<%= lead.id %>/activities', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        const result = await response.json();
        if (result.success) {
            window.location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Failed to add activity');
    }
});

function scheduleFollowup() {
    window.location.href = '/calendar?new=true&lead_id=<%= lead.id %>&title=Follow up with <%= lead.first_name %> <%= lead.last_name %>';
}

function runConflictCheck() {
    window.location.href = '/conflicts/new?names=<%= encodeURIComponent(lead.first_name + ' ' + lead.last_name) %>';
}

async function deleteLead() {
    if (!confirm('Are you sure you want to delete this lead? This action cannot be undone.')) return;

    try {
        const response = await fetch('/api/leads/<%= lead.id %>', { method: 'DELETE' });
        const result = await response.json();
        if (result.success) {
            alert('Lead deleted successfully');
            window.location.href = '/leads';
        } else {
            alert('Error: ' + (result.error || 'Failed to delete'));
        }
    } catch (error) {
        alert('Delete failed');
    }
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>
</body>
</html>

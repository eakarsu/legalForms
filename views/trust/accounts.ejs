<%- include('../base-pm', { title: title }) %>
<%- include('../partials/pm-nav', { active: 'trust' }) %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-piggy-bank me-2"></i>Trust Accounts</h2>
            <p class="text-muted mb-0">Manage your IOLTA and trust accounts</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newAccountModal">
            <i class="fas fa-plus me-1"></i>New Account
        </button>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Account Name</th>
                        <th>Bank</th>
                        <th>Type</th>
                        <th>Balance</th>
                        <th>Clients</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (accounts.length === 0) { %>
                    <tr><td colspan="6" class="text-center text-muted py-4">No trust accounts. Create one to get started.</td></tr>
                    <% } else { %>
                    <% accounts.forEach(acct => { %>
                    <tr class="clickable-row" data-href="/trust/<%= acct.id %>" style="cursor: pointer;">
                        <td><strong><%= acct.account_name %></strong></td>
                        <td><%= acct.bank_name %></td>
                        <td><span class="badge bg-secondary"><%= acct.account_type %></span></td>
                        <td class="text-success">$<%= parseFloat(acct.current_balance || 0).toLocaleString('en-US', {minimumFractionDigits: 2}) %></td>
                        <td><%= acct.ledger_count || 0 %></td>
                        <td onclick="event.stopPropagation();">
                            <button class="btn btn-sm btn-outline-danger btn-delete" data-id="<%= acct.id %>" title="Delete Account">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- New Account Modal -->
<div class="modal fade" id="newAccountModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Trust Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/trust/accounts" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Account Name</label>
                        <input type="text" name="account_name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bank Name</label>
                        <input type="text" name="bank_name" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Number</label>
                        <input type="text" name="account_number" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Type</label>
                        <select name="account_type" class="form-select">
                            <option value="iolta">IOLTA</option>
                            <option value="trust">Client Trust</option>
                            <option value="escrow">Escrow</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Row click handler
document.querySelectorAll('.clickable-row').forEach(row => {
    row.addEventListener('click', function() {
        window.location.href = this.dataset.href;
    });
});

// Delete handler
document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.addEventListener('click', async function(e) {
        e.stopPropagation();
        if (!confirm('Are you sure you want to delete this trust account? This will also delete all associated ledgers and transactions.')) return;

        const id = this.dataset.id;
        try {
            const response = await fetch(`/api/trust/accounts/${id}`, { method: 'DELETE' });
            const result = await response.json();
            if (result.success) {
                this.closest('tr').remove();
            } else {
                alert('Error: ' + (result.error || 'Failed to delete'));
            }
        } catch (error) {
            alert('Delete failed');
        }
    });
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

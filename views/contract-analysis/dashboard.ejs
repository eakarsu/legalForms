<%- include('../base-pm', {
    title: 'Contract Analysis',
    description: 'AI-powered contract risk analysis'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-file-contract me-2"></i>Contract Analysis</h2>
            <p class="text-muted mb-0">AI-powered contract risk assessment</p>
        </div>
        <a href="/contract-analysis/new" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Analysis
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.total_analyses || 0 %></h3>
                    <small>Total Analyses</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.high_risk_count || 0 %></h3>
                    <small>High Risk Contracts</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.pending_count || 0 %></h3>
                    <small>Pending Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= Math.round(stats.avg_risk_score || 0) %></h3>
                    <small>Avg Risk Score</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Analyses -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Analyses</h5>
        </div>
        <div class="card-body">
            <% if (analyses.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Document</th>
                            <th>Type</th>
                            <th>Client/Case</th>
                            <th>Risk</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% analyses.forEach(a => { %>
                        <tr>
                            <td>
                                <a href="/contract-analysis/<%= a.id %>">
                                    <i class="fas fa-file-alt me-1"></i>
                                    <%= a.document_name || 'Untitled' %>
                                </a>
                            </td>
                            <td><span class="badge bg-secondary"><%= a.document_type || 'general' %></span></td>
                            <td>
                                <% if (a.first_name) { %>
                                    <%= a.first_name %> <%= a.last_name %>
                                <% } %>
                                <% if (a.case_title) { %>
                                    <br><small class="text-muted"><%= a.case_title %></small>
                                <% } %>
                            </td>
                            <td>
                                <%
                                    let riskClass = 'success';
                                    if (a.risk_level === 'medium') riskClass = 'warning';
                                    else if (a.risk_level === 'high') riskClass = 'danger';
                                    else if (a.risk_level === 'critical') riskClass = 'dark';
                                %>
                                <span class="badge bg-<%= riskClass %>">
                                    <%= a.overall_risk_score || 0 %>% - <%= a.risk_level || 'pending' %>
                                </span>
                            </td>
                            <td>
                                <%
                                    let statusClass = 'secondary';
                                    if (a.status === 'completed') statusClass = 'success';
                                    else if (a.status === 'analyzing') statusClass = 'info';
                                    else if (a.status === 'reviewed') statusClass = 'primary';
                                %>
                                <span class="badge bg-<%= statusClass %>"><%= a.status %></span>
                            </td>
                            <td><%= new Date(a.created_at).toLocaleDateString() %></td>
                            <td>
                                <a href="/contract-analysis/<%= a.id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-file-contract fa-4x text-muted mb-3"></i>
                <h5>No analyses yet</h5>
                <p class="text-muted">Upload a contract to get started with AI-powered analysis</p>
                <a href="/contract-analysis/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Analyze Contract
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

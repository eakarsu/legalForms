<%- include('../base-pm', {
    title: 'Contract Analysis - ' + (analysis.document_name || 'Analysis'),
    description: 'Contract risk analysis results'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-file-contract me-2"></i><%= analysis.document_name || 'Contract Analysis' %></h2>
            <p class="text-muted mb-0">
                <span class="badge bg-secondary"><%= analysis.document_type || 'general' %></span>
                <% if (analysis.first_name) { %>
                    | Client: <%= analysis.first_name %> <%= analysis.last_name %>
                <% } %>
                <% if (analysis.case_title) { %>
                    | Case: <%= analysis.case_title %>
                <% } %>
            </p>
        </div>
        <div>
            <a href="/contract-analysis" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Risk Overview -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Risk Assessment</h5>
                </div>
                <div class="card-body text-center">
                    <%
                        let riskColor = '#28a745';
                        if (analysis.risk_level === 'medium') riskColor = '#ffc107';
                        else if (analysis.risk_level === 'high') riskColor = '#dc3545';
                        else if (analysis.risk_level === 'critical') riskColor = '#343a40';
                    %>
                    <div class="position-relative d-inline-block mb-3">
                        <svg width="150" height="150" viewBox="0 0 150 150">
                            <circle cx="75" cy="75" r="60" fill="none" stroke="#e9ecef" stroke-width="15"/>
                            <circle cx="75" cy="75" r="60" fill="none" stroke="<%= riskColor %>" stroke-width="15"
                                stroke-dasharray="<%= (analysis.overall_risk_score || 0) * 3.77 %> 377"
                                transform="rotate(-90 75 75)"/>
                        </svg>
                        <div class="position-absolute top-50 start-50 translate-middle">
                            <h2 class="mb-0"><%= analysis.overall_risk_score || 0 %></h2>
                            <small>Risk Score</small>
                        </div>
                    </div>

                    <h4>
                        <%
                            let riskClass = 'success';
                            if (analysis.risk_level === 'medium') riskClass = 'warning';
                            else if (analysis.risk_level === 'high') riskClass = 'danger';
                            else if (analysis.risk_level === 'critical') riskClass = 'dark';
                        %>
                        <span class="badge bg-<%= riskClass %> fs-5"><%= (analysis.risk_level || 'pending').toUpperCase() %> RISK</span>
                    </h4>

                    <hr>

                    <div class="row text-start">
                        <div class="col-6">
                            <strong><%= clauses.length %></strong><br>
                            <small class="text-muted">Clauses Found</small>
                        </div>
                        <div class="col-6">
                            <strong><%= terms.length %></strong><br>
                            <small class="text-muted">Key Terms</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Key Terms -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-key me-2"></i>Key Terms</h5>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <% if (terms.length > 0) { %>
                        <%
                            const termsByType = {};
                            terms.forEach(t => {
                                if (!termsByType[t.term_type]) termsByType[t.term_type] = [];
                                termsByType[t.term_type].push(t);
                            });
                        %>
                        <% Object.entries(termsByType).forEach(([type, typeTerms]) => { %>
                        <h6 class="text-uppercase text-muted small"><%= type.replace('_', ' ') %></h6>
                        <ul class="list-unstyled mb-3">
                            <% typeTerms.forEach(t => { %>
                            <li class="mb-2">
                                <strong><%= t.term_label || type %>:</strong>
                                <%= t.term_value %>
                                <% if (t.normalized_value && t.normalized_value !== t.term_value) { %>
                                    <br><small class="text-muted">(<%= t.normalized_value %>)</small>
                                <% } %>
                            </li>
                            <% }) %>
                        </ul>
                        <% }) %>
                    <% } else { %>
                        <p class="text-muted">No key terms extracted</p>
                    <% } %>
                </div>
            </div>

            <!-- Status -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Status:</strong>
                        <span class="badge bg-<%= analysis.status === 'reviewed' ? 'primary' : analysis.status === 'completed' ? 'success' : 'secondary' %>">
                            <%= analysis.status %>
                        </span>
                    </p>
                    <p><strong>Created:</strong> <%= new Date(analysis.created_at).toLocaleString() %></p>
                    <% if (analysis.reviewed_at) { %>
                    <p><strong>Reviewed:</strong> <%= new Date(analysis.reviewed_at).toLocaleString() %></p>
                    <% } %>
                    <% if (analysis.model_used) { %>
                    <p><strong>Model:</strong> <%= analysis.model_used %></p>
                    <% } %>
                    <% if (analysis.tokens_used) { %>
                    <p><strong>Tokens:</strong> <%= analysis.tokens_used %></p>
                    <% } %>

                    <% if (analysis.status !== 'reviewed') { %>
                    <hr>
                    <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#reviewModal">
                        <i class="fas fa-check me-1"></i>Mark as Reviewed
                    </button>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Summary -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Analysis Summary</h5>
                </div>
                <div class="card-body">
                    <% if (analysis.analysis_summary) { %>
                        <%
                            let summaryText = analysis.analysis_summary;
                            // Check if it looks like JSON and try to format it
                            if (summaryText.trim().startsWith('{') || summaryText.trim().startsWith('[')) {
                                try {
                                    const parsed = JSON.parse(summaryText);
                                    if (parsed.analysis_summary) {
                                        summaryText = parsed.analysis_summary;
                                    } else if (typeof parsed === 'object') {
                                        summaryText = Object.entries(parsed)
                                            .filter(([key, value]) => key !== 'clauses' && key !== 'key_terms')
                                            .map(([key, value]) => `${key.replace(/_/g, ' ').toUpperCase()}: ${typeof value === 'object' ? JSON.stringify(value) : value}`)
                                            .join('\n\n');
                                    }
                                } catch (e) {
                                    // Not valid JSON, use as-is
                                }
                            }
                        %>
                        <div class="summary-content" style="line-height: 1.8;">
                            <% summaryText.split('\n\n').forEach(paragraph => { %>
                                <p><%= paragraph.trim() %></p>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-muted">No summary available</p>
                    <% } %>
                </div>
            </div>

            <!-- Clauses -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-paragraph me-2"></i>Identified Clauses</h5>
                    <span class="badge bg-secondary"><%= clauses.length %> clauses</span>
                </div>
                <div class="card-body">
                    <% if (clauses.length > 0) { %>
                        <div class="accordion" id="clausesAccordion">
                            <% clauses.forEach((clause, index) => { %>
                            <%
                                let clauseRiskClass = 'success';
                                if (clause.risk_level === 'medium') clauseRiskClass = 'warning';
                                else if (clause.risk_level === 'high') clauseRiskClass = 'danger';
                                else if (clause.risk_level === 'critical') clauseRiskClass = 'dark';
                            %>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button <%= index > 0 ? 'collapsed' : '' %>" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#clause<%= index %>">
                                        <span class="badge bg-<%= clauseRiskClass %> me-2"><%= clause.risk_score || 0 %>%</span>
                                        <strong><%= clause.clause_type.replace(/_/g, ' ').toUpperCase() %></strong>
                                        <% if (clause.is_flagged) { %>
                                            <span class="badge bg-warning ms-2"><i class="fas fa-flag"></i></span>
                                        <% } %>
                                    </button>
                                </h2>
                                <div id="clause<%= index %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
                                    data-bs-parent="#clausesAccordion">
                                    <div class="accordion-body">
                                        <div class="mb-3">
                                            <h6>Clause Text:</h6>
                                            <blockquote class="blockquote bg-light p-3 border-start border-4 border-<%= clauseRiskClass %>">
                                                <p class="small mb-0"><%= clause.clause_text %></p>
                                            </blockquote>
                                        </div>

                                        <% if (clause.risk_explanation) { %>
                                        <div class="mb-3">
                                            <h6><i class="fas fa-exclamation-triangle text-<%= clauseRiskClass %> me-1"></i>Risk Explanation:</h6>
                                            <p><%= clause.risk_explanation %></p>
                                        </div>
                                        <% } %>

                                        <% if (clause.recommendation) { %>
                                        <div class="mb-3">
                                            <h6><i class="fas fa-lightbulb text-info me-1"></i>Recommendation:</h6>
                                            <p><%= clause.recommendation %></p>
                                        </div>
                                        <% } %>

                                        <% if (clause.attorney_notes) { %>
                                        <div class="alert alert-info">
                                            <h6><i class="fas fa-user-tie me-1"></i>Attorney Notes:</h6>
                                            <p class="mb-0"><%= clause.attorney_notes %></p>
                                        </div>
                                        <% } %>

                                        <button class="btn btn-sm btn-outline-warning flag-clause-btn"
                                            data-clause-id="<%= clause.id %>"
                                            <%= clause.is_flagged ? 'disabled' : '' %>>
                                            <i class="fas fa-flag me-1"></i>
                                            <%= clause.is_flagged ? 'Flagged' : 'Flag for Review' %>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-muted text-center">No clauses identified</p>
                    <% } %>
                </div>
            </div>

            <!-- Original Text (Collapsible) -->
            <div class="card">
                <div class="card-header">
                    <button class="btn btn-link text-decoration-none p-0" type="button"
                        data-bs-toggle="collapse" data-bs-target="#originalText">
                        <i class="fas fa-file-alt me-2"></i>Original Contract Text
                        <i class="fas fa-chevron-down ms-2"></i>
                    </button>
                </div>
                <div class="collapse" id="originalText">
                    <div class="card-body">
                        <pre class="bg-light p-3" style="max-height: 500px; overflow-y: auto; white-space: pre-wrap;"><%= analysis.document_text %></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mark as Reviewed</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Review Notes (Optional)</label>
                    <textarea class="form-control" id="reviewNotes" rows="4"
                        placeholder="Add any notes about your review..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitReviewBtn">
                    <i class="fas fa-check me-1"></i>Submit Review
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Flag Modal -->
<div class="modal fade" id="flagModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Flag Clause for Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Attorney Notes</label>
                    <textarea class="form-control" id="flagNotes" rows="4"
                        placeholder="Add notes about why this clause needs attention..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="submitFlagBtn">
                    <i class="fas fa-flag me-1"></i>Flag Clause
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
const analysisId = '<%= analysis.id %>';
let currentClauseId = null;

// Submit review
document.getElementById('submitReviewBtn').addEventListener('click', async function() {
    const notes = document.getElementById('reviewNotes').value;

    try {
        const response = await fetch(`/api/contract-analysis/${analysisId}/review`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ review_notes: notes })
        });

        const result = await response.json();
        if (result.success) {
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }
});

// Flag clause buttons
document.querySelectorAll('.flag-clause-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        currentClauseId = this.dataset.clauseId;
        const modal = new bootstrap.Modal(document.getElementById('flagModal'));
        modal.show();
    });
});

// Submit flag
document.getElementById('submitFlagBtn').addEventListener('click', async function() {
    const notes = document.getElementById('flagNotes').value;

    try {
        const response = await fetch(`/api/contract-analysis/${analysisId}/flag-clause`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ clause_id: currentClauseId, attorney_notes: notes })
        });

        const result = await response.json();
        if (result.success) {
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error: ' + error.message);
    }
});
</script>
</body>
</html>

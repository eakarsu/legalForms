<%- include('../base-pm', {
    title: 'Document OCR',
    description: 'Extract text from scanned documents'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-file-image me-2"></i>Document OCR</h2>
            <p class="text-muted mb-0">Extract text from scanned documents and images</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="fas fa-upload me-1"></i>Upload Document
        </button>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3><%= stats.total_jobs || 0 %></h3>
                    <small>Total Jobs</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3><%= stats.completed || 0 %></h3>
                    <small>Completed</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3><%= stats.processing || 0 %></h3>
                    <small>Processing</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3><%= stats.total_pages || 0 %></h3>
                    <small>Pages Processed</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/api/ocr/search" method="GET" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="q" class="form-control" placeholder="Search across all OCR'd documents...">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Jobs List -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent OCR Jobs</h5>
        </div>
        <div class="card-body">
            <% if (jobs.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>File</th>
                            <th>Type</th>
                            <th>Pages</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% jobs.forEach(job => { %>
                        <tr class="clickable-row" data-id="<%= job.id %>" data-status="<%= job.status %>" style="cursor: pointer;">
                            <td>
                                <i class="fas fa-file-<%= job.file_type === 'pdf' ? 'pdf text-danger' : 'image text-info' %> me-2"></i>
                                <strong><%= job.file_name %></strong>
                            </td>
                            <td><%= job.file_type.toUpperCase() %></td>
                            <td><%= job.pages_processed || 0 %>/<%= job.page_count || '?' %></td>
                            <td>
                                <span class="badge bg-<%= job.status === 'completed' ? 'success' : job.status === 'processing' ? 'warning' : job.status === 'failed' ? 'danger' : 'secondary' %>">
                                    <%= job.status %>
                                    <% if (job.status === 'processing') { %>(<%= job.progress %>%)<% } %>
                                </span>
                            </td>
                            <td><%= new Date(job.created_at).toLocaleDateString() %></td>
                            <td onclick="event.stopPropagation();">
                                <div class="btn-group btn-group-sm">
                                    <% if (job.status === 'completed') { %>
                                    <a href="/ocr/<%= job.id %>" class="btn btn-outline-primary"><i class="fas fa-eye"></i></a>
                                    <% } else if (job.status === 'processing') { %>
                                    <button class="btn btn-outline-secondary" disabled><i class="fas fa-spinner fa-spin"></i></button>
                                    <% } else { %>
                                    <button class="btn btn-outline-secondary" disabled><i class="fas fa-eye"></i></button>
                                    <% } %>
                                    <button class="btn btn-outline-danger btn-delete" data-id="<%= job.id %>" data-name="<%= job.file_name %>"><i class="fas fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-file-image fa-3x text-muted mb-3"></i>
                <h5>No OCR Jobs</h5>
                <p class="text-muted">Upload a document to extract text using OCR.</p>
            </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-upload me-2"></i>Upload Document for OCR</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select File</label>
                        <input type="file" name="file" class="form-control" accept=".pdf,.png,.jpg,.jpeg,.tiff,.tif,.gif,.bmp" required>
                        <small class="text-muted">Supported: PDF, PNG, JPG, TIFF, GIF, BMP (max 50MB)</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Language</label>
                        <select name="language" class="form-select">
                            <option value="eng">English</option>
                            <option value="spa">Spanish</option>
                            <option value="fra">French</option>
                            <option value="deu">German</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload me-1"></i>Upload & Process
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Job Detail Modal -->
<div class="modal fade" id="jobModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">OCR Job Details</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body" id="jobDetails"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" id="btnDeleteJob"><i class="fas fa-trash me-1"></i>Delete</button>
                <a href="#" class="btn btn-primary" id="btnViewResult" style="display: none;"><i class="fas fa-eye me-1"></i>View Result</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
var currentJobId = null;

// Row click handler
document.querySelectorAll('.clickable-row').forEach(row => {
    row.addEventListener('click', function() {
        viewJob(this.dataset.id, this.dataset.status);
    });
});

// Delete button handlers
document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        deleteJob(this.dataset.id, this.dataset.name);
    });
});

function viewJob(id, status) {
    currentJobId = id;
    const jobs = <%- JSON.stringify(jobs) %>;
    const job = jobs.find(j => j.id == id);
    if (job) {
        document.getElementById('jobDetails').innerHTML = `
            <table class="table table-borderless">
                <tr><th width="120">File:</th><td><strong>${job.file_name}</strong></td></tr>
                <tr><th>Type:</th><td>${job.file_type.toUpperCase()}</td></tr>
                <tr><th>Pages:</th><td>${job.pages_processed || 0}/${job.page_count || '?'}</td></tr>
                <tr><th>Status:</th><td><span class="badge bg-${job.status === 'completed' ? 'success' : job.status === 'processing' ? 'warning' : 'danger'}">${job.status}</span></td></tr>
                <tr><th>Created:</th><td>${new Date(job.created_at).toLocaleString()}</td></tr>
                ${job.error_message ? '<tr><th>Error:</th><td class="text-danger">' + job.error_message + '</td></tr>' : ''}
            </table>
        `;
        const viewBtn = document.getElementById('btnViewResult');
        if (status === 'completed') {
            viewBtn.style.display = 'inline-block';
            viewBtn.href = '/ocr/' + id;
        } else {
            viewBtn.style.display = 'none';
        }
        new bootstrap.Modal(document.getElementById('jobModal')).show();
    }
}

function deleteJob(id, name) {
    if (!confirm('Delete OCR job "' + name + '"? This will remove the extracted text.')) return;
    fetch('/api/ocr/' + id, { method: 'DELETE' })
    .then(r => r.json())
    .then(data => {
        if (data.success) location.reload();
        else alert('Error: ' + (data.error || 'Failed to delete'));
    });
}

document.getElementById('btnDeleteJob').onclick = function() {
    bootstrap.Modal.getInstance(document.getElementById('jobModal')).hide();
    const jobs = <%- JSON.stringify(jobs) %>;
    const job = jobs.find(j => j.id == currentJobId);
    if (job) deleteJob(currentJobId, job.file_name);
};

document.getElementById('uploadForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData(form);
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;

    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Uploading...';
    submitBtn.disabled = true;

    try {
        const response = await fetch('/api/ocr/process', {
            method: 'POST',
            body: formData
        });

        const result = await response.json();

        if (result.success) {
            alert('OCR processing started! The page will refresh.');
            window.location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Upload failed. Please try again.');
    }

    submitBtn.innerHTML = originalText;
    submitBtn.disabled = false;
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>
</body>
</html>

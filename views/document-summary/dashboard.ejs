<%- include('../base-pm', {
    title: 'Document Summaries',
    description: 'AI-powered document summarization'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-compress-alt me-2"></i>Document Summaries</h2>
            <p class="text-muted mb-0">AI-powered document summarization and key points extraction</p>
        </div>
        <a href="/document-summary/new" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Summary
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.total_summaries || 0 %></h3>
                    <small>Total Summaries</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= Math.round((stats.total_words || 0) / 1000) %>K</h3>
                    <small>Words Processed</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.notes_created || 0 %></h3>
                    <small>Case Notes Created</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Summaries -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Summaries</h5>
        </div>
        <div class="card-body">
            <% if (summaries.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Document</th>
                            <th>Type</th>
                            <th>Client/Case</th>
                            <th>Words</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% summaries.forEach(s => { %>
                        <tr>
                            <td>
                                <a href="/document-summary/<%= s.id %>">
                                    <i class="fas fa-file-alt me-1"></i>
                                    <%= s.source_name || 'Untitled' %>
                                </a>
                            </td>
                            <td><span class="badge bg-secondary"><%= s.source_type || 'general' %></span></td>
                            <td>
                                <% if (s.first_name) { %>
                                    <%= s.first_name %> <%= s.last_name %>
                                <% } %>
                                <% if (s.case_title) { %>
                                    <br><small class="text-muted"><%= s.case_title %></small>
                                <% } %>
                            </td>
                            <td><%= s.word_count || 0 %></td>
                            <td>
                                <span class="badge bg-<%= s.status === 'completed' ? 'success' : s.status === 'processing' ? 'info' : 'secondary' %>">
                                    <%= s.status %>
                                </span>
                                <% if (s.case_note_id) { %>
                                    <span class="badge bg-primary" title="Case note created"><i class="fas fa-sticky-note"></i></span>
                                <% } %>
                            </td>
                            <td><%= new Date(s.created_at).toLocaleDateString() %></td>
                            <td>
                                <a href="/document-summary/<%= s.id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-compress-alt fa-4x text-muted mb-3"></i>
                <h5>No summaries yet</h5>
                <p class="text-muted">Summarize your first document with AI</p>
                <a href="/document-summary/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Summarize Document
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

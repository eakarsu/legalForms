<%- include('../base-pm', {
    title: 'AI Drafting Sessions',
    description: 'View all AI drafting sessions'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/ai-drafting">AI Drafting</a></li>
                    <li class="breadcrumb-item active">Sessions</li>
                </ol>
            </nav>
            <h2><i class="fas fa-history me-2"></i>Drafting Sessions</h2>
            <p class="text-muted mb-0">View and manage all your AI drafting sessions</p>
        </div>
        <a href="/ai-drafting/new" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Draft
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Sessions</h5>
        </div>
        <div class="card-body">
            <% if (sessions.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Template</th>
                            <th>Client</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sessions.forEach(s => { %>
                        <tr>
                            <td>
                                <a href="/ai-drafting/sessions/<%= s.id %>">
                                    <strong><%= s.title || 'Untitled Draft' %></strong>
                                </a>
                            </td>
                            <td><%= s.template_name || 'Custom' %></td>
                            <td>
                                <% if (s.first_name) { %>
                                <%= s.first_name %> <%= s.last_name %>
                                <% } else { %>
                                <span class="text-muted">-</span>
                                <% } %>
                            </td>
                            <td>
                                <span class="badge bg-<%= s.status === 'completed' ? 'success' : s.status === 'generating' ? 'warning' : s.status === 'saved' ? 'info' : 'secondary' %>">
                                    <%= s.status %>
                                </span>
                            </td>
                            <td><%= new Date(s.created_at).toLocaleDateString() %></td>
                            <td>
                                <a href="/ai-drafting/sessions/<%= s.id %>" class="btn btn-sm btn-outline-primary btn-view" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/ai-drafting/sessions/<%= s.id %>" class="btn btn-sm btn-outline-success btn-continue" title="Continue">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-outline-danger btn-delete" data-id="<%= s.id %>" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
                <h5>No drafting sessions yet</h5>
                <p class="text-muted">Create your first AI-powered document draft</p>
                <a href="/ai-drafting/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create New Draft
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.addEventListener('click', async function() {
        if (!confirm('Are you sure you want to delete this session?')) return;
        const id = this.dataset.id;
        try {
            const response = await fetch(`/api/ai-drafting/sessions/${id}`, {
                method: 'DELETE'
            });
            if (response.ok) {
                this.closest('tr').remove();
            } else {
                alert('Failed to delete session');
            }
        } catch (error) {
            alert('Error deleting session');
        }
    });
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

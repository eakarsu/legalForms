<%- include('../base-pm', {
    title: 'AI Document Drafting',
    description: 'Generate legal documents with AI'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-robot me-2"></i>AI Document Drafting</h2>
            <p class="text-muted mb-0">Generate legal documents using AI</p>
        </div>
        <a href="/ai-drafting/new" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Draft
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= stats.total_drafts || 0 %></h3>
                    <small>Documents Generated (30 days)</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h3 class="mb-0"><%= Math.round((stats.total_tokens || 0) / 1000) %>K</h3>
                    <small>Tokens Used</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h3 class="mb-0">$<%= parseFloat(stats.total_cost || 0).toFixed(2) %></h3>
                    <small>Estimated Cost</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Templates -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Templates</h5>
                </div>
                <div class="card-body">
                    <% if (templates.length > 0) { %>
                    <div class="list-group">
                        <% templates.slice(0, 10).forEach(t => { %>
                        <a href="/ai-drafting/new?template=<%= t.id %>" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong><%= t.name %></strong>
                                    <br><small class="text-muted"><%= t.category %> - Used <%= t.usage_count %> times</small>
                                </div>
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </a>
                        <% }) %>
                    </div>
                    <% } else { %>
                    <p class="text-muted text-center">No templates available</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Recent Sessions -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Drafts</h5>
                </div>
                <div class="card-body">
                    <% if (sessions.length > 0) { %>
                    <div class="list-group">
                        <% sessions.forEach(s => { %>
                        <a href="/ai-drafting/sessions/<%= s.id %>" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong><%= s.title || 'Untitled Draft' %></strong>
                                    <br><small class="text-muted">
                                        <%= s.template_name || 'Custom' %>
                                        <% if (s.first_name) { %> - <%= s.first_name %> <%= s.last_name %><% } %>
                                    </small>
                                </div>
                                <span class="badge bg-<%= s.status === 'completed' ? 'success' : s.status === 'generating' ? 'warning' : 'secondary' %>">
                                    <%= s.status %>
                                </span>
                            </div>
                        </a>
                        <% }) %>
                    </div>
                    <% } else { %>
                    <p class="text-muted text-center">No recent drafts</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Start</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <a href="/ai-drafting/new?category=letter" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-envelope me-2"></i>Letter
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/ai-drafting/new?category=contract" class="btn btn-outline-success w-100 mb-2">
                        <i class="fas fa-file-contract me-2"></i>Contract
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/ai-drafting/new?category=motion" class="btn btn-outline-warning w-100 mb-2">
                        <i class="fas fa-gavel me-2"></i>Motion
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/ai-drafting/new?category=memo" class="btn btn-outline-info w-100 mb-2">
                        <i class="fas fa-sticky-note me-2"></i>Memo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

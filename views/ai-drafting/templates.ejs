<%- include('../base-pm', {
    title: 'AI Drafting Templates',
    description: 'Browse and use AI drafting templates'
}) %>

<%- include('../partials/pm-nav') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/ai-drafting">AI Drafting</a></li>
                    <li class="breadcrumb-item active">Templates</li>
                </ol>
            </nav>
            <h2><i class="fas fa-file-alt me-2"></i>Document Templates</h2>
            <p class="text-muted mb-0">Browse and use templates for AI document drafting</p>
        </div>
        <a href="/ai-drafting/new" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>New Draft
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Available Templates</h5>
        </div>
        <div class="card-body">
            <% if (templates.length > 0) { %>
            <div class="row">
                <% templates.forEach(t => { %>
                <div class="col-md-4 mb-4">
                    <div class="card template-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0"><%= t.name %></h5>
                                <span class="badge bg-secondary"><%= t.category %></span>
                            </div>
                            <p class="card-text text-muted small"><%= t.description || 'No description available' %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Used <%= t.usage_count || 0 %> times</small>
                                <div>
                                    <a href="/ai-drafting/new?template=<%= t.id %>" class="btn btn-sm btn-primary">
                                        <i class="fas fa-play me-1"></i>Use
                                    </a>
                                    <button class="btn btn-sm btn-outline-primary btn-start" data-template="<%= t.id %>">
                                        Start
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
                <h5>No templates available</h5>
                <p class="text-muted">Create your first custom document draft</p>
                <a href="/ai-drafting/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Start from Scratch
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.btn-start').forEach(btn => {
    btn.addEventListener('click', function() {
        const templateId = this.dataset.template;
        window.location.href = `/ai-drafting/new?template=${templateId}`;
    });
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

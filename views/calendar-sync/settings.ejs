<%- include('../base-pm', { title: title }) %>
<%- include('../partials/pm-nav', { active: 'calendar-sync' }) %>

<div class="container-fluid py-4">
    <h2><i class="fas fa-cog me-2"></i>Sync Settings</h2>
    <p class="text-muted">Configure your calendar synchronization preferences</p>

    <div class="card mt-4">
        <div class="card-header"><h5 class="mb-0">Connected Calendars</h5></div>
        <div class="card-body">
            <% if (connections.length === 0) { %>
            <p class="text-muted text-center">No calendars connected. <a href="/calendar-sync">Connect one now</a>.</p>
            <% } else { %>
            <% connections.forEach(conn => { %>
            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                <div>
                    <strong><i class="fab fa-<%= conn.provider === 'google' ? 'google' : 'microsoft' %> me-2"></i><%= conn.provider_email %></strong>
                    <br><small class="text-muted">Connected <%= new Date(conn.created_at).toLocaleDateString() %></small>
                </div>
                <div>
                    <button class="btn btn-sm btn-outline-primary me-2" onclick="syncNow('<%= conn.id %>')">Sync Now</button>
                    <button class="btn btn-sm btn-outline-danger" onclick="disconnect('<%= conn.id %>')">Disconnect</button>
                </div>
            </div>
            <% }) %>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
async function syncNow(connId) {
    const res = await fetch('/api/calendar-sync/' + connId + '/sync', { method: 'POST' });
    const data = await res.json();
    alert(data.success ? 'Sync started!' : 'Error: ' + data.error);
    location.reload();
}
async function disconnect(connId) {
    if (!confirm('Disconnect this calendar?')) return;
    const res = await fetch('/api/calendar-sync/' + connId, { method: 'DELETE' });
    location.reload();
}
</script>
</body>
</html>

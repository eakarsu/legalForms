<%- include('../base-pm', { title: title }) %>
<%- include('../partials/pm-nav', { active: 'messages' }) %>
    <div class="pm-container">
        <div class="pm-header">
            <div class="pm-header-content"><h1><i class="fas fa-envelope me-2"></i>Messages</h1></div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#composeModal"><i class="fas fa-plus me-2"></i>Compose</button>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header"><h6 class="mb-0">Inbox</h6></div>
                    <div class="list-group list-group-flush" style="max-height: 600px; overflow-y: auto;">
                        <% if (messages.length === 0) { %>
                            <div class="list-group-item text-center text-muted">No messages</div>
                        <% } else { %>
                            <% messages.forEach(m => { %>
                                <a href="#" class="list-group-item list-group-item-action clickable-message <%= !m.is_read ? 'fw-bold' : '' %>" data-id="<%= m.id %>">
                                    <div class="d-flex justify-content-between">
                                        <small class="text-<%= m.message_type === 'client' ? 'primary' : 'muted' %>"><%= m.message_type %></small>
                                        <small class="text-muted"><%= new Date(m.created_at).toLocaleDateString() %></small>
                                    </div>
                                    <h6 class="mb-1 text-truncate"><%= m.subject || '(No Subject)' %></h6>
                                    <small class="text-muted text-truncate d-block"><%= m.content.substring(0, 50) %>...</small>
                                </a>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card" id="messageDetail">
                    <div class="card-body text-center text-muted py-5">
                        <i class="fas fa-envelope-open fa-3x mb-3"></i>
                        <p>Select a message to view</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="composeModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header"><h5>Compose Message</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-6"><label>Type</label><select id="msgType" class="form-select"><option value="internal">Internal</option><option value="client">Client</option></select></div>
                        <div class="col-6"><label>Recipient</label><select id="msgClient" name="to" class="form-select"><option value="">Select Client</option><% clients.forEach(c => { %><option value="<%= c.id %>"><%= c.company_name || (c.first_name + ' ' + c.last_name) %></option><% }) %></select></div>
                    </div>
                    <div class="mb-3"><label>Case</label><select id="msgCase" class="form-select"><option value="">No Case</option><% cases.forEach(c => { %><option value="<%= c.id %>"><%= c.title %></option><% }) %></select></div>
                    <div class="mb-3"><label>Subject</label><input type="text" id="msgSubject" name="subject" class="form-control"></div>
                    <div class="mb-3"><label>Message *</label><textarea id="msgContent" name="body" class="form-control" rows="5" required></textarea></div>
                </div>
                <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button><button type="button" class="btn btn-primary" id="btnSendMessage"><i class="fas fa-paper-plane me-1"></i>Send</button></div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const messagesData = <%- JSON.stringify(messages) %>;

        // Clickable messages
        document.querySelectorAll('.clickable-message').forEach(function(item) {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                if (this.dataset.id) {
                    viewMessage(this.dataset.id);
                }
            });
        });

        // Event delegation for dynamic buttons
        document.getElementById('messageDetail').addEventListener('click', function(e) {
            var target = e.target.closest('button');
            if (!target) return;

            if (target.classList.contains('btn-reply')) {
                replyTo(target.dataset.id);
            } else if (target.classList.contains('btn-delete')) {
                deleteMessage(target.dataset.id);
            }
        });

        // Send button
        document.getElementById('btnSendMessage').addEventListener('click', function() {
            sendMessage();
        });

        function viewMessage(id) {
            const m = messagesData.find(msg => msg.id === id);
            if (m) {
                document.getElementById('messageDetail').innerHTML = `
                    <div class="card-header d-flex justify-content-between">
                        <h5 class="mb-0">${m.subject || '(No Subject)'}</h5>
                        <span class="badge bg-${m.message_type === 'client' ? 'primary' : 'secondary'}">${m.message_type}</span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 pb-3 border-bottom">
                            <small class="text-muted">Date: ${new Date(m.created_at).toLocaleString()}</small>
                            ${m.case_title ? `<br><small class="text-muted">Case: ${m.case_title}</small>` : ''}
                        </div>
                        <div style="white-space: pre-wrap;">${m.content}</div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-outline-primary btn-sm btn-reply" data-id="${m.id}"><i class="fas fa-reply me-1"></i>Reply</button>
                        <button class="btn btn-outline-danger btn-sm btn-delete" data-id="${m.id}"><i class="fas fa-trash me-1"></i>Delete</button>
                    </div>`;
                if (!m.is_read) { fetch('/api/messages/' + id + '/read', { method: 'PUT' }); }
            }
        }
        function sendMessage() {
            fetch('/api/messages', {
                method: 'POST', headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message_type: document.getElementById('msgType').value, client_id: document.getElementById('msgClient').value || null, case_id: document.getElementById('msgCase').value || null, subject: document.getElementById('msgSubject').value, content: document.getElementById('msgContent').value })
            })
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.success) location.reload();
                else alert('Error sending message: ' + (data.error || 'Unknown error'));
            })
            .catch(function(err) { alert('Failed to send message'); console.error(err); });
        }
        function deleteMessage(id) {
            if (confirm('Are you sure you want to delete this message? This action cannot be undone.')) {
                fetch('/api/messages/' + id, { method: 'DELETE' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) location.reload();
                    else alert('Error: ' + (data.error || 'Failed to delete'));
                })
                .catch(err => alert('Error: ' + err.message));
            }
        }

        function replyTo(id) {
            const m = messagesData.find(msg => msg.id === id);
            if (m) {
                document.getElementById('msgSubject').value = 'Re: ' + (m.subject || '');
                document.getElementById('msgClient').value = m.client_id || '';
                document.getElementById('msgCase').value = m.case_id || '';
            }
            new bootstrap.Modal(document.getElementById('composeModal')).show();
        }
    </script>
</body>
</html>

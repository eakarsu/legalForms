                            <li><a class="dropdown-item" href="/billing/time"><i class="fas fa-stopwatch me-2"></i>Time Tracking</a></li>
                            <li><a class="dropdown-item" href="/billing/invoices"><i class="fas fa-file-invoice-dollar me-2"></i>Invoices</a></li>
                            <li><a class="dropdown-item" href="/billing/expenses"><i class="fas fa-receipt me-2"></i>Expenses</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/billing/ai-suggestions"><i class="fas fa-robot me-2"></i>AI Suggestions</a></li>
                        </ul>
                    </li>

                    <!-- Trust -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="fas fa-university me-1"></i>Trust</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/trust"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                            <li><a class="dropdown-item" href="/trust/accounts"><i class="fas fa-piggy-bank me-2"></i>Accounts</a></li>
                            <li><a class="dropdown-item" href="/trust/ledgers"><i class="fas fa-book me-2"></i>Client Ledgers</a></li>
                            <li><a class="dropdown-item" href="/trust/transactions"><i class="fas fa-exchange-alt me-2"></i>Transactions</a></li>

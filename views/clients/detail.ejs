                            <li><a class="dropdown-item" href="/payments"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                            <li><a class="dropdown-item" href="/payments/links"><i class="fas fa-link me-2"></i>Payment Links</a></li>
                            <li><a class="dropdown-item" href="/payments/transactions"><i class="fas fa-list me-2"></i>Transactions</a></li>
                            <li><a class="dropdown-item" href="/payments/settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                        </ul>
                    </li>

                    <!-- Documents -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="fas fa-file-alt me-1"></i>Documents</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/services"><i class="fas fa-file-contract me-2"></i>Document Generator</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/ai-drafting"><i class="fas fa-robot me-2"></i>AI Drafting</a></li>
                            <li><a class="dropdown-item" href="/ocr"><i class="fas fa-file-image me-2"></i>Document OCR</a></li>
                            <li><a class="dropdown-item" href="/contract-analysis"><i class="fas fa-file-contract me-2"></i>Contract Analysis</a></li>
                            <li><a class="dropdown-item" href="/document-summary"><i class="fas fa-compress-alt me-2"></i>AI Summaries</a></li>
                            <li><a class="dropdown-item" href="/citation-finder"><i class="fas fa-gavel me-2"></i>Citation Finder</a></li>
                        </ul>
                    </li>

                    <!-- Messages -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="fas fa-envelope me-1"></i>Messages</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/messages"><i class="fas fa-inbox me-2"></i>Inbox</a></li>
                            <li><a class="dropdown-item" href="/notifications"><i class="fas fa-bell me-2"></i>Notifications</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/communications/ai-drafts"><i class="fas fa-robot me-2"></i>AI Drafts</a></li>
                        </ul>
                    </li>

                    <!-- Reports -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="fas fa-chart-bar me-1"></i>Reports</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/reports"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                            <li><a class="dropdown-item" href="/reports/revenue"><i class="fas fa-dollar-sign me-2"></i>Revenue</a></li>
                            <li><a class="dropdown-item" href="/reports/productivity"><i class="fas fa-clock me-2"></i>Productivity</a></li>

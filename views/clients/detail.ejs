    <div class="container-fluid py-4">
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/clients">Clients</a></li>
                <li class="breadcrumb-item active"><%= title %></li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <% if (client.client_type === 'business') { %>
                        <i class="fas fa-building me-2"></i><%= client.company_name %>
                    <% } else { %>
                        <i class="fas fa-user me-2"></i><%= client.first_name %> <%= client.last_name %>
                    <% } %>
                    <span class="badge bg-<%= client.status === 'active' ? 'success' : 'secondary' %> ms-2"><%= client.status %></span>
                </h2>
            </div>
            <div>
                <a href="/clients/<%= client.id %>/edit" class="btn btn-outline-primary me-2"><i class="fas fa-edit me-1"></i>Edit</a>
                <button class="btn btn-outline-danger" onclick="deleteClient()"><i class="fas fa-trash me-1"></i>Delete</button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <div class="card-header"><h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Client Information</h5></div>
                    <div class="card-body">
                        <% if (client.email) { %><p><i class="fas fa-envelope text-muted me-2"></i><%= client.email %></p><% } %>
                        <% if (client.phone) { %><p><i class="fas fa-phone text-muted me-2"></i><%= client.phone %></p><% } %>
                        <% if (client.address) { %><p><i class="fas fa-map-marker-alt text-muted me-2"></i><%= client.address %></p><% } %>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header"><h5 class="mb-0"><i class="fas fa-dollar-sign me-2"></i>Billing</h5></div>
                    <div class="card-body">
                        <p>Total Billed: $<%= parseFloat(billing.total_billed || 0).toFixed(2) %></p>
                        <p>Total Paid: $<%= parseFloat(billing.total_paid || 0).toFixed(2) %></p>
                        <p>Outstanding: $<%= parseFloat(billing.outstanding || 0).toFixed(2) %></p>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header"><h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>Cases (<%= cases.length %>)</h5></div>
                    <div class="card-body p-0">
                        <% if (cases.length === 0) { %>
                            <div class="text-center py-4"><p class="text-muted">No cases</p></div>
                        <% } else { %>
                            <table class="table table-hover mb-0">
                                <thead><tr><th>Case</th><th>Status</th></tr></thead>
                                <tbody>
                                    <% cases.forEach(function(c) { %>
                                        <tr style="cursor:pointer" onclick="window.location='/cases/<%= c.id %>'">
                                            <td><%= c.title %></td>
                                            <td><%= c.status %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } %>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header"><h5 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Invoices (<%= invoices.length %>)</h5></div>
                    <div class="card-body p-0">
                        <% if (invoices.length === 0) { %>
                            <div class="text-center py-4"><p class="text-muted">No invoices</p></div>
                        <% } else { %>
                            <table class="table table-hover mb-0">
                                <thead><tr><th>Invoice</th><th>Total</th><th>Status</th></tr></thead>
                                <tbody>
                                    <% invoices.forEach(function(inv) { %>
                                        <tr style="cursor:pointer" onclick="window.location='/billing/invoices/<%= inv.id %>'">
                                            <td><%= inv.invoice_number %></td>
                                            <td>$<%= parseFloat(inv.total).toFixed(2) %></td>
                                            <td><%= inv.status %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteClient() {
            if (confirm('Delete this client? This cannot be undone.')) {
                fetch('/api/clients/<%= client.id %>', { method: 'DELETE' })
                .then(function(r) { return r.json(); })
                .then(function(d) {
                    if (d.success) window.location='/clients';
                    else alert('Error: ' + (d.error || 'Failed to delete client'));
                })
                .catch(function(err) {
                    alert('Failed to delete client');
                    console.error(err);
                });
            }
        }
    </script>
<%- include('../partials/footer') %>
</body>
</html>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-chart-bar me-2"></i>Client Analytics</h2>
            <p class="text-muted mb-0">Insights into your client base and revenue</p>
        </div>
        <a href="/clients" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Clients
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3 class="mb-1"><%= stats.total_clients || 0 %></h3>
                    <small>Total Clients</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3 class="mb-1"><%= stats.active_clients || 0 %></h3>
                    <small>Active Clients</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3 class="mb-1"><%= stats.new_this_month || 0 %></h3>
                    <small>New This Month</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3 class="mb-1"><%= stats.new_this_week || 0 %></h3>
                    <small>New This Week</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Client Types Chart -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-pie-chart me-2"></i>Client Types</h5>
                </div>
                <div class="card-body">
                    <canvas id="clientTypesChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <!-- Client Status Chart -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Client Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="clientStatusChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <!-- Client Acquisition -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Acquisition Trend</h5>
                </div>
                <div class="card-body">
                    <canvas id="acquisitionChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top Clients by Revenue -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Top Clients by Revenue</h5>
                </div>
                <div class="card-body">
                    <% if (topClients.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Client</th>
                                    <th>Type</th>
                                    <th>Cases</th>
                                    <th>Total Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% topClients.forEach((client, index) => { %>
                                <tr>
                                    <td>
                                        <% if (index < 3) { %>
                                        <span class="badge bg-<%= index === 0 ? 'warning' : index === 1 ? 'secondary' : 'danger' %>">
                                            <%= index + 1 %>
                                        </span>
                                        <% } else { %>
                                        <%= index + 1 %>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/clients/<%= client.id %>">
                                            <%= client.client_type === 'business' ? client.company_name : `${client.first_name} ${client.last_name}` %>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-<%= client.client_type === 'business' ? 'primary' : 'info' %>">
                                            <%= client.client_type %>
                                        </span>
                                    </td>
                                    <td><%= client.case_count %></td>
                                    <td class="fw-bold text-success">$<%= parseFloat(client.total_revenue || 0).toLocaleString('en-US', {minimumFractionDigits: 2}) %></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <p class="text-muted text-center">No revenue data available yet.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Clients by State -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Clients by State</h5>
                </div>
                <div class="card-body">
                    <% if (byState.length > 0) { %>
                    <canvas id="stateChart" height="300"></canvas>
                    <% } else { %>
                    <p class="text-muted text-center">No state data available.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
// Client Types Pie Chart
const typesCtx = document.getElementById('clientTypesChart').getContext('2d');
new Chart(typesCtx, {
    type: 'doughnut',
    data: {
        labels: ['Individuals', 'Businesses'],
        datasets: [{
            data: [<%= stats.individuals || 0 %>, <%= stats.businesses || 0 %>],
            backgroundColor: ['#17a2b8', '#007bff'],
            borderWidth: 0
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});

// Client Status Pie Chart
const statusCtx = document.getElementById('clientStatusChart').getContext('2d');
new Chart(statusCtx, {
    type: 'doughnut',
    data: {
        labels: ['Active', 'Inactive', 'Archived'],
        datasets: [{
            data: [<%= stats.active_clients || 0 %>, <%= stats.inactive_clients || 0 %>, <%= stats.archived_clients || 0 %>],
            backgroundColor: ['#28a745', '#ffc107', '#6c757d'],
            borderWidth: 0
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});

// Acquisition Line Chart
const acqCtx = document.getElementById('acquisitionChart').getContext('2d');
const acquisitionData = <%- JSON.stringify(acquisition) %>;
new Chart(acqCtx, {
    type: 'line',
    data: {
        labels: acquisitionData.map(a => a.month),
        datasets: [{
            label: 'New Clients',
            data: acquisitionData.map(a => parseInt(a.count)),
            borderColor: '#667eea',
            backgroundColor: 'rgba(102, 126, 234, 0.1)',
            fill: true,
            tension: 0.4
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});

// State Bar Chart
<% if (byState.length > 0) { %>
const stateCtx = document.getElementById('stateChart').getContext('2d');
const stateData = <%- JSON.stringify(byState) %>;
new Chart(stateCtx, {
    type: 'bar',
    data: {
        labels: stateData.map(s => s.state),
        datasets: [{
            label: 'Clients',
            data: stateData.map(s => parseInt(s.count)),
            backgroundColor: '#667eea'
        }]
    },
    options: {
        responsive: true,
        indexAxis: 'y',
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            x: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
                }
            }
        }
    }
});
<% } %>
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
